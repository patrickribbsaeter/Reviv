<Window x:Class="Reviv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Visibility="Visible" Name="FirstPanel">
            <Label>Reviv</Label>
            <TextBlock TextWrapping="Wrap">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque ut mauris a lectus dapibus efficitur. Donec nisl est, luctus ut sem eget, consectetur dictum quam.</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Label Name="BootFileLabel">boot2_ipx.bin</Label>
                <Button x:Name="SelectBootFile" Click="SelectBootFile_Click">Select Boot File</Button>
            </StackPanel>
            <Button x:Name="Riviv" Visibility="Hidden" Click="Riviv_Click">Reviv it</Button>
        </StackPanel>

        <StackPanel Visibility="Collapsed" Name="SecondPanel">
            <TextBlock>
                <Run>Performing SysCfg acquisition on</Run>
                <Run>boot2_ipx.bin</Run>
            </TextBlock>
            <ProgressBar Height="20" Name="CarveProgress"></ProgressBar>
        </StackPanel>

        <StackPanel Visibility="Collapsed" Name="ThirdPanel">
            <Grid x:Name="CarvedSysCfgGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
            </Grid>
            <StackPanel Orientation="Horizontal">
                <Button>Start Over</Button>
                <Button>Save as .txt</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
